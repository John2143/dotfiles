#!/bin/bash
DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
echo $DIR

link(){
    if [[ -e $HOME/$1 ]]; then
        if [[ $(diff -q $DIR/$1 $HOME/$1) ]]; then
            cp $HOME/$1 $HOME/$1.old
            echo "moved old $1"
        else
            echo "didnt move $1, file is same, just deleting instead"
        fi
        rm $HOME/$1
    fi
    ln -s $DIR/$1 $HOME/$1
    echo "Linked $1"
}

linkConfig(){
    mkdir -p "$HOME/.config"

    FILE="$HOME/.config/$1"
    if [[ -e "$FILE" ]]; then
        if [[ -L "$FILE" ]]; then
            echo "Deleting symbolic link $FILE"
            rm $FILE
        else
            cp -r "$FILE" "$FILE.old"
            echo "moved old config $1: created $FILE.old"
        fi
    fi
    ln -s $DIR/.config/$1 $FILE
    echo "ln -s $DIR/.config/$1 $FILE"
}

linkEtc(){
    FILE="$HOME/.config/$1"
    ETC="/etc/$1"
    if [[ -e "$ETC" ]]; then
        if [[ -L "$ETC" ]]; then
            echo "Deleting symbolic link $ETC"
            sudo rm $ETC
        else
            sudo cp -r "$ETC" "$ETC.old"
            echo "moved old config $1: created $ETC.old"
        fi
    fi
    sudo ln -s $FILE $ETC
    echo "sudo ln -s $FILE $ETC"
}

buildRust(){
    cd $DIR/$1
    cargo install --path .
}

link .gitconfig
link .tmux.conf
link .vimrc
link .xprofile
link .xprofile.fish

for file in "./.config/"/*; do
    linkConfig $(basename "$file")
done

buildRust daily
buildRust awsctx
buildRust macros
buildRust binder

if [[ "$(uname)" = "Linux" ]]; then
    linkEtc paru.conf
    linkEtc pacman.conf
fi

if [[ -s $ZSH ]]; then
    link .zshrc
    rm $HOME/.oh-my-zsh/custom/themes/john.zsh-theme
    ln -s $DIR/john.zsh-theme $HOME/.oh-my-zsh/custom/themes/john.zsh-theme
elif [[ -s $BASH ]]; then
    link .bashrc
fi
